<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eredmeny"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/sotetkek">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choices_layout"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:padding="10dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eredmenyed"
            android:textColor="@color/sotetkek"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="400dp"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            app:cornerRadius="8dp"
            android:text="itt lezs az eredmény"
            />


        <Button
            android:id="@+id/visszaATeszthez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:text="Töltsd ki újra a tesztet"
            android:textColor="@color/sotetkek"
            android:textSize="20sp"
            app:cornerRadius="8dp"/>


    </LinearLayout>



</RelativeLayout>